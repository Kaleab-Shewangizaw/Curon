generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String
  createdAt DateTime  @default(now())

  // Relations
  thoughts  Thought[] // One User can have many Thoughts
}

model Thought {
  id        String    @id @default(uuid())
  content   String
  source    String
  topic     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  ownerId   String?       // Foreign key to User
  owner     User?         @relation(fields: [ownerId], references: [id])
  intents   Intent[]      // One Thought can have many Intents
}

model Intent {
  id               String    @id @default(uuid())
  type             String
  topic            String?
  confidence       Float?

  // Foreign key to Thought
  relatedThoughtId String?   
  relatedThought   Thought?  @relation(fields: [relatedThoughtId], references: [id])

  // Relations
  tasks            Task[]    // One Intent can have many Tasks

  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model Task {
  id              String    @id @default(uuid())
  title           String
  status          String
  dueDate         DateTime?
  priority        Int?

  // Foreign key to Intent
  relatedIntentId String?
  relatedIntent   Intent?   @relation(fields: [relatedIntentId], references: [id])

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}
