generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())

  thoughts  Thought[]
  intents   Intent[] 
}

model Thought {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id])
  intents   Intent[]
}

model Intent {
  id         String   @id @default(cuid())
  type       String
  confidence Float?
  status     IntentStatus @default(ACTIVE)
  pendingQuestion String?
  pendingProposal Json?    // Stores the proposed AI plan waiting for confirmation
  createdAt  DateTime @default(now())

  thoughtId  String
  thought    Thought  @relation(fields: [thoughtId], references: [id])

  userId     String
  user       User     @relation(fields: [userId], references: [id])

  tasks      Task[]
  chats      IntentChat[]
}

model IntentChat {
  id        String   @id @default(cuid())
  role      String   // "user" | "system"
  content   String
  createdAt DateTime @default(now())

  intentId  String
  intent    Intent   @relation(fields: [intentId], references: [id], onDelete: Cascade)
}

model Task {
  id        String   @id @default(cuid())
  title     String
  priority  Int?
  done      Boolean  @default(false)
  createdAt DateTime @default(now())

  intentId  String
  intent    Intent   @relation(fields: [intentId], references: [id])
}

enum IntentStatus {
  ACTIVE
  FORGOTTEN
  CLARIFICATION_REQUESTED
}
